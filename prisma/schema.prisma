generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  bookings Booking[]

  @@map("users")
}

model Booking {
  id         String   @id @default(uuid())
  start_time DateTime
  end_time   DateTime
  created_at DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  sportCourt    SportCourt @relation(fields: [sportCourt_id], references: [id])
  sportCourt_id String

  @@map("bookings")
}

model SportCourt {
  id             String  @id @default(uuid())
  title          String
  description    String?
  phone          String?
  location       String
  latitude       Float
  longitude      Float
  price_per_hour Decimal

  bookings Booking[]

  @@map("sport_courts")
}
