generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  MEMBER
  ADMIN
}

model User {
  id            String       @id @default(uuid())
  name          String
  email         String       @unique
  password_hash String
  role          UserRole     @default(MEMBER)
  created_at    DateTime     @default(now())
  bookings      Booking[]
  sport_courts  SportCourt[]
  payments      Payment[]

  @@map("users")
}

model Booking {
  id         String        @id @default(uuid())
  start_time DateTime
  end_time   DateTime
  created_at DateTime      @default(now())
  status     BookingStatus @default(PENDING)
  price      Decimal

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  sportCourt    SportCourt @relation(fields: [sportCourt_id], references: [id])
  sportCourt_id String

  payment Payment?

  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  ERROR
}

model Payment {
  id          String        @id @default(uuid())
  external_id String?
  order_id    String?
  method      String?
  amount      Decimal
  status      PaymentStatus @default(PENDING)
  updated_at  DateTime      @updatedAt
  created_at  DateTime      @default(now())
  currency    String        @default("brl")
  description String?

  user       User   @relation(fields: [user_email], references: [email])
  user_email String

  booking    Booking @relation(fields: [booking_id], references: [id])
  booking_id String  @unique

  @@map("payments")
}

enum PaymentStatus {
  PAID
  PENDING
  FAILED
  REFUNDED
}

model SportCourt {
  id                  String             @id @default(uuid())
  title               String
  type                String
  phone               String?
  location            String
  latitude            Decimal
  longitude           Decimal
  is_active           Boolean            @default(true)
  price_per_hour      Decimal
  bookings            Booking[]
  court_blocked_dates CourtBlockedDate[]
  owner               User               @relation(fields: [owner_id], references: [id])
  owner_id            String

  @@map("sport_courts")
}

model CourtBlockedDate {
  id            String     @id @default(uuid())
  start_time    DateTime
  end_time      DateTime
  reason        String?
  sportCourt    SportCourt @relation(fields: [sportCourt_id], references: [id])
  sportCourt_id String

  @@map("court_blocked_dates")
}
